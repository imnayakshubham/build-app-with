{
  "name": "create-new-app",
  "version": "2.0.0",
  "description": "Production-grade CLI tool to create modern web applications with Next.js, Vite, Express, and Fastify",
  "main": "index.js",
  "type": "module",
  "bin": {
    "create-new-app": "./bin/cli.js"
  },
  "scripts": {
    "start": "node ./bin/cli.js",
    "dev": "node ./bin/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build step required for CLI tool'",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "react",
    "nextjs",
    "vite",
    "express",
    "fastify",
    "nodejs",
    "cli",
    "generator",
    "scaffold",
    "boilerplate",
    "production-ready",
    "typescript",
    "fullstack"
  ],
  "author": "New React App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/create-new-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/create-new-app/issues"
  },
  "homepage": "https://github.com/your-username/create-new-app#readme",
  "dependencies": {
    "chalk": "^5.6.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "inquirer": "^8.2.6",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@types/jest": "^29.5.12",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}